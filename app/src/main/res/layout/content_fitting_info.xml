<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitta.lightsoo.fitta.Activity.FittingInfoActivity"
    tools:showIn="@layout/activity_fitting_info">


    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="촬영할 의상의 종류를 선택하세요"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="상의"
            android:id="@+id/tv_top"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="19dp" />



        <com.fitta.lightsoo.fitta.RadioLayout.RadioButtonWithTableLayout
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayoutTop"
            android:layout_below="@+id/tv_top"
            android:layout_alignLeft="@+id/tv_top"
            android:layout_alignStart="@+id/tv_top">
            <TableRow>


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의1"
                        android:id="@+id/top1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의2"
                        android:id="@+id/top2"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의3"
                        android:id="@+id/top3"
                        android:layout_weight="1"
                        android:checked="false" />

            </TableRow>
            <TableRow>

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의4"
                        android:id="@+id/top4"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의5"
                        android:id="@+id/top5"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의6"
                        android:id="@+id/top6"
                        android:layout_weight="1"
                        android:checked="false" />
            </TableRow>
            <TableRow>


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의7"
                        android:id="@+id/top7"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의8"
                        android:id="@+id/top8"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상의9"
                        android:id="@+id/top9"
                        android:layout_weight="1"
                        android:checked="false" />
            </TableRow>
        </com.fitta.lightsoo.fitta.RadioLayout.RadioButtonWithTableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="하의"
            android:id="@+id/tv_bottom"
            android:layout_below="@+id/tableLayoutTop"
            android:layout_alignLeft="@+id/tableLayoutTop"
            android:layout_alignStart="@+id/tableLayoutTop"
            android:layout_marginTop="19dp" />

        <com.fitta.lightsoo.fitta.RadioLayout.RadioButtonWithTableLayout
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayoutBottom"
            android:layout_below="@+id/tv_bottom"
            android:layout_alignLeft="@+id/tv_bottom"
            android:layout_alignStart="@+id/tv_bottom">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의1"
                        android:id="@+id/bottom1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의2"
                        android:id="@+id/bottom2"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의3"
                        android:id="@+id/bottom3"
                        android:layout_weight="1"
                        android:checked="false" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의4"
                        android:id="@+id/bottom4"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의5"
                        android:id="@+id/bottom5"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하의6"
                        android:id="@+id/bottom6"
                        android:layout_weight="1"
                        android:checked="false" />
            </TableRow>

        </com.fitta.lightsoo.fitta.RadioLayout.RadioButtonWithTableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="원피스, 기타"
            android:id="@+id/tv_etc"
            android:layout_below="@+id/tableLayoutBottom"
            android:layout_alignLeft="@+id/tableLayoutBottom"
            android:layout_alignStart="@+id/tableLayoutBottom"
            android:layout_marginTop="19dp" />

        <com.fitta.lightsoo.fitta.RadioLayout.RadioButtonWithTableLayout
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayoutEtc"
            android:layout_below="@+id/tv_etc"
            android:layout_alignLeft="@+id/tv_etc"
            android:layout_alignStart="@+id/tv_etc">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타1"
                        android:id="@+id/etc1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타2"
                        android:id="@+id/etc2"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타3"
                        android:id="@+id/etc3"
                        android:layout_weight="1"
                        android:checked="false" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >


                    <RadioButton
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타4"
                        android:id="@+id/etc4"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타5"
                        android:id="@+id/etc5"
                        android:layout_weight="1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타6"
                        android:id="@+id/etc6"
                        android:layout_weight="1"
                        android:checked="false" />
            </TableRow>
        </com.fitta.lightsoo.fitta.RadioLayout.RadioButtonWithTableLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피팅하기"
            android:id="@+id/btn_fitting"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="사이즈 입력하기"
            android:id="@+id/textView26"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/relativeLayoutGone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="피팅할 의상의 사이즈를 입력해주세요"
            android:id="@+id/textView25"
            android:layout_centerVertical="true" />

        <Button
            android:layout_width="211dp"
            android:layout_height="45dp"
            android:text=" 입력완료 "
            android:id="@+id/btn_post"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:prompt="@string/spinnerClothes"
            android:layout_below="@+id/textView25"
            android:layout_alignLeft="@+id/textView25"
            android:layout_alignStart="@+id/textView25"
            android:layout_marginTop="7dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:prompt="@string/spinnerClothes"
            android:layout_alignTop="@+id/spinner1"
            android:layout_alignRight="@+id/textView25"
            android:layout_alignEnd="@+id/textView25" />
    </RelativeLayout>
</RelativeLayout>