<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/background_login"
    tools:context="com.fitta.lightsoo.fitta.Intro.LoginActivity">


    <ImageButton
        android:background="@drawable/facebook_login"
        android:layout_width="295.33dp"
        android:layout_height="47.67dp"
        android:id="@+id/btn_fb"
        android:layout_marginBottom="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.fitta.lightsoo.fitta.Intro.KakaoLoginButton
        android:layout_width="295.33dp"
        android:layout_height="47.67dp"
        android:id="@+id/btn_kakao"
        android:layout_marginTop="54.67dp"
        android:layout_alignTop="@+id/btn_fb"
        android:layout_alignLeft="@+id/btn_fb"
        android:layout_alignStart="@+id/btn_fb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인테스트용"
        android:id="@+id/btn_login"
        android:layout_below="@+id/btn_kakao"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
