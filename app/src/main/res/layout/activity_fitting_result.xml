<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fitta.lightsoo.fitta.Activity.FittingResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="옷이 다소 큽니다. 한 치수 낮은 것을 권유합니다."
        android:id="@+id/textView10"
android:textSize="33.33px"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="86.35px"
        android:text="피팅 완료"
        android:id="@+id/textView4"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="성별 :  "
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="신장 :  "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="5.6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="체중 :  "
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="5.6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="신체 :  "
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="5.6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="33.33px"
        android:text="종류/셔츠/M(95)"
        android:id="@+id/textView9"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="여성"
        android:id="@+id/user_sex"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="160cm"
        android:id="@+id/user_height"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="45kg"
        android:id="@+id/user_weight"
        android:layout_above="@+id/textView8"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="33.33px"
        android:text="머리/가슴/배"
        android:id="@+id/user_size"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <RelativeLayout
        android:layout_width="240.67dp"
        android:layout_height="293.33dp"
        android:background="@drawable/shape_layout_border"
        android:layout_marginTop="169.33dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/avatar"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentEnd="false" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clothes"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <Button
        android:layout_width="160.67dp"
        android:layout_height="47.3dp"
        android:text="다시 피팅하기"
        android:id="@+id/btn_refitting"
        android:layout_below="@+id/textView9"
        android:layout_marginLeft="14.67dp"
        android:layout_marginTop="17.76dp" />

    <Button
        android:layout_width="160.67dp"
        android:layout_height="47.3dp"
        android:text="피팅룸으로 가기"
        android:id="@+id/btn_fittingroom"
        android:layout_alignTop="@+id/btn_refitting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14.67dp" />
</RelativeLayout>
