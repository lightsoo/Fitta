<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="160.67dp"
        android:layout_height="47.33dp"
        android:text="다시 피팅하기"
        android:id="@+id/btn_refresh"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14.67dp"
        android:layout_marginStart="14.67dp"
        android:layout_marginBottom="55.33dp" />

    <Button
        android:layout_width="160.67dp"
        android:layout_height="47.33dp"
        android:text="즐겨찾기에 저장"
        android:id="@+id/button"
        android:layout_alignTop="@+id/btn_refresh"
        android:layout_toRightOf="@+id/btn_refresh"
        android:layout_toEndOf="@+id/btn_refresh"
        android:layout_marginLeft="9.33dp" />

    <RelativeLayout

        android:background="@drawable/shape_layout_border"
        android:layout_width="313dp"
        android:layout_height="404.33dp"
        android:layout_above="@+id/btn_refresh"
        android:layout_alignLeft="@+id/btn_refresh"
        android:layout_alignStart="@+id/btn_refresh"
        android:layout_marginBottom="12.67dp"
        android:id="@+id/relativeLayout5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_launcher" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_layout_border"
        android:layout_width="122.33dp"
        android:layout_height="404.33dp"
        android:layout_alignTop="@+id/relativeLayout5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/relativeLayout6"
            android:layout_toStartOf="@+id/relativeLayout6">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_clothes" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="38.67dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout6">

            <Button
                android:id="@+id/btn_lv_top"
                android:layout_width="match_parent"
                android:layout_height="81.33dp"
                android:text="상의" />
            <Button
                android:layout_below="@+id/btn_lv_top"
                android:id="@+id/btn_lv_bottom"
                android:layout_width="match_parent"
                android:layout_height="81.33dp"
                android:text="하의" />
            <Button
                android:id="@+id/btn_lv_etc"
                android:layout_below="@+id/btn_lv_bottom"
                android:layout_width="match_parent"
                android:layout_height="81.33dp"
                android:text="기타" />
            <Button
                android:id="@+id/btn_lv_like"
                android:layout_below="@+id/btn_lv_etc"
                android:layout_width="match_parent"
                android:layout_height="81.33dp"
                android:text="즐겨찾기" />




        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>

