<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fitta.lightsoo.fitta.Setting.AgreementActivity"
    tools:showIn="@layout/activity_agreement">

    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용 약관"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12.33dp"
        android:layout_marginTop="5dp" />

    <ScrollView
        android:background="@drawable/shape_layout_border"
        android:layout_width="340.33dp"
        android:layout_height="206dp"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="8dp">

        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreement1"
            android:id="@+id/textView21" />
    </ScrollView>

    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개인정보 수집 및 이용"
        android:id="@+id/textView23"
        android:layout_below="@+id/scrollView2"
        android:layout_alignStart="@+id/scrollView2"
        android:layout_marginTop="23dp" />

    <ScrollView
        android:background="@drawable/shape_layout_border"
        android:layout_width="340.33dp"
        android:layout_height="206dp"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="8dp">

        <TextView
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreement2"
            android:id="@+id/textView24" />
    </ScrollView>

</RelativeLayout>
